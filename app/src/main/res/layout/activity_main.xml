<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.basquete.MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFC107"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tempoJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:fontFamily="@font/digital_7"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="00:00"
            android:textColor="#FFC107"
            android:textSize="54sp" />
    </FrameLayout>

    <Button
        android:id="@+id/btnPause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:text="▶"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <LinearLayout
        android:id="@+id/placarContainerA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/placarContainerPeriodo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPause">
        <TextView
            android:id="@+id/timeA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="TIME A"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/placarTimeA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/digital_7"
            android:gravity="center"
            android:padding="4dp"
            android:text="0"
            android:textColor="#FF0000"
            android:textSize="54sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/placarContainerPeriodo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/placarContainerB"
        app:layout_constraintStart_toEndOf="@+id/placarContainerA"
        app:layout_constraintTop_toTopOf="@+id/placarContainerA">
        <TextView
            android:id="@+id/periodoTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="PERÍODO"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/periodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/digital_7"
            android:gravity="center"
            android:padding="4dp"
            android:text="0"
            android:textColor="#FFC107"
            android:textSize="54sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/placarContainerB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/placarContainerPeriodo"
        app:layout_constraintTop_toTopOf="@+id/placarContainerA">
        <TextView
            android:id="@+id/timeB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="TIME B"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/placarTimeB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/digital_7"
            android:gravity="center"
            android:padding="4dp"
            android:text="0"
            android:textColor="#FF0000"
            android:textSize="54sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/controlesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/iniciarJogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#34C759"
            android:textColor="#FFFFFF"
            android:text="Iniciar Jogo" />
        <Button
            android:id="@+id/verMetricas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#8E8E93"
            android:textColor="#FFFFFF"
            android:text="Ver Métricas" />
        <Button
            android:id="@+id/reiniciarPartida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#8E8E93"
            android:textColor="#FFFFFF"
            android:text="Reiniciar Partida" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/controlesContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placarContainerA">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/tresPontosA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#FF3B30"
                android:textColor="#FFFFFF"
                android:text="+3 PONTOS" />
            <Button
                android:id="@+id/doisPontosA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9500"
                android:textColor="#FFFFFF"
                android:text="+2 PONTOS"
                />
            <Button
                android:id="@+id/tiroLivreA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#FFCC00"
                android:text="Tiro Livre" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/tresPontosB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#FF3B30"
                android:textColor="#FFFFFF"
                android:text="+3 PONTOS" />
            <Button
                android:id="@+id/doisPontosB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9500"
                android:textColor="#FFFFFF"
                android:text="+2 PONTOS" />
            <Button
                android:id="@+id/tiroLivreB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#FFCC00"
                android:text="Tiro Livre" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>